{
  "manifest_version": 3,
  "name": "Aviator Tracker Pro",
  "version": "2.0.0",
  "description": "An√°lisis profesional de multiplicadores para Aviator y High Flyer con Sniper Trigger y Estrategias",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "scripting",
    "unlimitedStorage",
    "webNavigation"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:5000/*",
    "*://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}